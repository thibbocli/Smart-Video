<Window x:Class="SmartVideo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartVideo"
        mc:Ignorable="d"
        Title="MainWindow" Height="391.004" Width="649.477">
    <StackPanel>
        <StackPanel HorizontalAlignment="Left" Height="74" Margin="6,9,0,0" VerticalAlignment="Top" Width="629" Orientation="Horizontal">
            <Button Content="Next" HorizontalAlignment="Left" Margin="10,0,5,0" Width="119" Command="{Binding ListFilmCommandNext}"/>
            <Button Content="Previous" Height="74" Margin="5,0,5,0" VerticalAlignment="Top" Width="132" Command="{Binding ListFilmCommandPrevious}"/>
        </StackPanel>
        <Grid Height="277">
            <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Height="267" VerticalAlignment="Top" Width="347" ItemsSource="{Binding ListFilm}"/>
        </Grid>
    </StackPanel>

</Window>
